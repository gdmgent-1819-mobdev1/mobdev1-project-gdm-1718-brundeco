
{{> header }}
    <div class="content-lv">
        <div class="just-a-box-lv">
            <div class="toggleViews">
                <button id="toggleListView">List</button>
                <button id="toggleMapView">Map</button>
            </div>
                <button id="sortByDistance">Dichtsbijzijnde koten eerst</button>
            <h2>Beschikbare kamers</h2>
            {{#each allRooms }}
                <div class="info-list">
                        <h5 class="card-room-type-lv">Studio</h5>
                    <div class="info-list-img">
                        <img src="src/images/kot-3.jpg" class="room-picture-list" alt="">
                    </div>
                    <div class="info-list-text">
                        <div class="sub-div">
                            <p class="card-titles-lv width"></p>
                            <p class="card-values-lv card-surface">{{ this.surface }}</p>
                        </div>
                        <div class="sub-div">
                            <p class="card-titles-lv distance"></p>
                            <p class="card-values-lv card-distance">{{ this.distance }}</p>
                        </div>
                        <div class="sub-div">
                            <p class="card-titles-lv price"></p>
                            <p class="card-values-lv card-price">{{ this.rentalPrice }}</p>
                        </div>
                    </div>
                </div>
             {{/each}}
        </div>
    </div>
{{> footer }}


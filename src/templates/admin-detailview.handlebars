<!-- - - - - - - - - - - - - - - Room detail view - - - - - - - - - - - - - - -->
{{> header }}
<div class="content-wrapper-2" id="contentBlock">
    <div class="center-all">
        {{#each clickedRoom }}
        <h2 class="address-detail">{{ this.address }}</h2>
        <div class="room-image-block">
            <img src="{{ this.image }}" class="room-image-detail" alt="">
        </div>
        <div class="room-properties">
            <h5 class="property-title">Beschrijving<span class="property-info"> {{ this.description }}</span></h5>
            <h5 class="property-title">Type<span class="property-info"> {{ this.type }}</span></h5>
            <h5 class="property-title">Locatie<span class="property-info"> {{ this.address }}</span></h5>
            <h5 class="property-title">Oppervlakte<span class="property-info"> {{ this.surface }} m²</span></h5>
            <h5 class="property-title">Prijs<span class="property-info">€ {{ this.rentalPrice }}</span></h5>
            <h5 class="property-title"> Bemeubeld<span class="property-info"> {{ this.furnished }}</span></h5>
            <h5 class="property-title">Verdiepingen<span class="property-info"> {{ this.floors }}</span></h5>
            <h5 class="property-title">Aantal personen<span class="property-info"> {{ this.numberOfPersons }}</span></h5>
            <h5 class="property-title">Douche<span class="property-info"> {{ this.douche }}</span></h5>
            <h5 class="property-title">Toilet<span class="property-info"> {{ this.toilet }}</span></h5>
            <h5 class="property-title">Bad<span class="property-info"> {{ this.bath }}</span></h5>
            <h5 class="property-title">Waarborg<span class="property-info">€ {{ this.warrant }}</span></h5>
            <h5 class="property-title">Eigenaar<span class="property-info"> {{ this.adminName }}</span></h5>
        </div>
        <div class="share-on-social-media">
            <a href="#" id="fbShareButton"><i class="fab fa-facebook-f"></i></a>
        </div>
        <div class="edit-owner">
            <button id="btnEditRoom">Aanpassen</button>
            <button id="btnRemoveRoom">Verwijderen</button>
        </div>
        {{/each}}
    </div>
</div>

<!-- - - - - - - - - - - - - - - Room edit view - - - - - - - - - - - - - - -->
<div class="content-wrapper" id="contentBlock">
    <div class="no-wrap">
        <form class="just-a-box-2" id="editRoom">
            {{#each clickedRoom }}
            <h2>Kot wijzigen</h2>
            <input class="edit-room-input" type="text" value="{{ this.description }}" id="description" placeholder="beschrijving">
            <input class="edit-room-input" type="text" value="{{ this.rentalPrice }}" id="rentalPrice" placeholder="huurprijs">
            <input class="edit-room-input" type="text" value="{{ this.warrant }}" id="warrant" placeholder="waarborg">
            <input class="edit-room-input" type="text" value="{{ this.surface }}" id="surface" placeholder="oppervlakte">
            <input class="edit-room-input" type="text" value="{{ this.address }}" id="address" placeholder="adres">
            <input class="edit-room-input" type="text" value="{{ this.type }}" id="roomType" placeholder="type">
            <input class="edit-room-input" type="text" value="{{ this.floors }}" id="floors" placeholder="aantal verdiepingen">
            <input class="edit-room-input" type="text" value="{{ this.numberOfPersons }}" id="numberOfPersons"
                placeholder="aantal personen">
            <input class="edit-room-input" type="text" value="{{ this.toilet }}" id="toilet" placeholder="toilet">
            <input class="edit-room-input" type="text" value="{{ this.douche }}" id="douche" placeholder="douche">
            <input class="edit-room-input" type="text" value="{{ this.bath }}" id="bath" placeholder="bad">
            <input class="edit-room-input" type="text" value="{{ this.kitchen }}" id="kitchen" placeholder="keuken">
            <input class="edit-room-input" type="text" value="{{ this.furnished }}" id="furnished" placeholder="bemeubled">
            <input class="edit-room-input" type="text" value="{{ this.adminName }}" id="adminName" placeholder="eigenaar">
            <input type="file" name="image" id="roomImage">
            <p id="fullImageName"></p>
            <p id="progress" style="display:none">Even geduld ... uw foto wordt verwerkt</p>
            <input type="submit" id="editRoomSubmit" value="Kot wijzigen">
        </form>
        {{/each}}
        </form>
    </div>
</div>
{{> footer-admin }}